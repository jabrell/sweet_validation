{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Default Metadata Schema",
  "description": "The default metadata schema for the standard registry. The default scheme requires tables to have a name property and fields. Fields are already required by the frictionless standard. The default scheme is used when no scheme is provided.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the table.",
      "constraints": {
        "required": true
      }
    },
    "fields": {
      "type": "array",
      "description": "An array of field definitions.",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the field."
          },
          "type": {
            "type": "string",
            "description": "The data type of the field (e.g., string, integer, number, boolean, date, etc.)."
          },
          "constraints": {
            "type": "object",
            "description": "Constraints on the field",
            "properties": {
              "required": {
                "type": "boolean",
                "description": "Whether the field is required"
              },
              "unique": {
                "type": "boolean",
                "description": "Whether the field is unique"
              },
              "minLength": {
                "type": "integer",
                "description": "Minimum length of the field"
              },
              "maxLength": {
                "type": "integer",
                "description": "Maximum length of the field"
              },
              "pattern": {
                "type": "string",
                "description": "Regular expression pattern for the field"
              },
              "enum": {
                "type": "array",
                "description": "List of allowed values"
              },
              "minimum": {
                "type": "number",
                "description": "Minimum numeric value"
              },
              "maximum": {
                "type": "number",
                "description": "Maximum numeric value"
              },
              "format": {
                "type": "string",
                "description": "Format of the field (e.g., date, datetime)"
              }
            },
            "additionalProperties": true
          }
        },
        "required": [
          "name",
          "type"
        ],
        "additionalProperties": true
      },
      "constraints": {
        "required": true
      }
    },
    "description": {
      "type": "string",
      "description": "A description of the table."
    },
    "title": {
      "type": "string",
      "description": "A title for the table."
    }
  },
  "required": [
    "name",
    "fields"
  ],
  "additionalProperties": true
}