{
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "ruff.lint.args": [
        "--fix"
    ], // Enable auto-fixing
    "ruff.lint.select": [
        "I"
    ], // Enable import sorting (I = isort rule)
    "ruff.lint.ignore": [
        "F401"
    ], // Ignore "unused import" errors (F401)
